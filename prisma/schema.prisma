generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      String   @default("ADMIN")
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HomeContent {
  id                    String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  heroTitle             String // JSON string
  heroSubtitle          String // JSON string
  ctaText               String // JSON string
  ctaButtonText         String // JSON string
  featureTitle          String @default("{\"en\": \"Expert Management Solutions\", \"th\": \"โซลูชั่นการจัดการจากผู้เชี่ยวชาญ\"}") // JSON string
  featureDescription    String @default("{\"en\": \"Streamline your business operations and enhance productivity\", \"th\": \"ปรับปรุงการดำเนินธุรกิจแลเพิ่มผลิตภาพ\"}") // JSON string
  aboutTitle            String // JSON string
  aboutDescription      String // JSON string
  peopleTitle           String @default("{\"en\": \"Meet Our People\", \"th\": \"พบกับทีมงานของเรา\"}") // JSON string
  peopleDescription     String @default("{\"en\": \"Get to know the talented individuals who drive our success\", \"th\": \"ทำความรู้จักกับบุคคลที่มีความสามารถผลักดันความสำเร็จ\"}") // JSON string
  // Images (language-neutral)
  heroImage             String?
  featureImage          String?
  aboutImage            String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model Service {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  title       String // JSON string
  description String // JSON string
  // Features array - each feature has multi-language support
  features    String @default("[]") // JSON string array of multi-language objects
  // Language-neutral fields
  icon        String
  image       String?
  color       String @default("#6495ed")
  isActive    Boolean @default(true)
  order       Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AboutContent {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  missionTitle      String // JSON string
  missionText       String // JSON string
  visionTitle       String // JSON string
  visionText        String // JSON string
  valuesTitle       String // JSON string
  valuesText        String // JSON string
  historyTitle      String // JSON string
  historyText       String // JSON string
  // Images (language-neutral)
  missionImage      String?
  heroImage         String?
  // Statistics (JSON: {"en": "English", "th": "Thai"})
  happyClientsCount String @default("{\"en\": \"500+\", \"th\": \"500+\"}")
  happyClientsLabel String @default("{\"en\": \"Happy Clients\", \"th\": \"ลูกค้าที่พอใจ\"}")
  experienceCount   String @default("{\"en\": \"10+\", \"th\": \"10+\"}")
  experienceLabel   String @default("{\"en\": \"Years Experience\", \"th\": \"ปีประสบการณ์\"}")
  // Vision Items (JSON array, each item has {"en": "English", "th": "Thai"})
  visionItems       String @default("[]") // JSON string
  // Values Items (JSON array, each item has title/description in both languages)
  valuesItems       String @default("[]") // JSON string
  // Journey Items (JSON array, each item has title/description in both languages)
  journeyItems      String @default("[]") // JSON string
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ServicesContent {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  heroTitle       String // JSON string
  heroSubtitle    String // JSON string
  // Images (language-neutral)
  heroImage       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model TeamContent {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  heroTitle       String // JSON string
  heroSubtitle    String // JSON string
  // Images (language-neutral)
  heroImage       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model TeamMember {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  position    String
  description String
  image       String?
  email       String?
  linkedin    String?
  twitter     String?
  isActive    Boolean @default(true)
  order       Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactContent {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  // Multi-language text fields (JSON: {"en": "English", "th": "Thai"})
  title           String // JSON string
  subtitle        String // JSON string
  address         String // JSON string
  // Contact info (language-neutral)
  phone           String
  email           String
  businessHours   String // JSON string (already JSON format)
  mapEmbedUrl     String?
  // Images (language-neutral)
  bannerImage     String?
  heroImage       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model FAQ {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  isActive  Boolean @default(true)
  order     Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSettings {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  siteName        String
  siteTagline     String
  logo            String?
  favicon         String?
  primaryColor    String @default("#6495ed")
  secondaryColor  String @default("#9333ea")
  socialLinks     String // JSON string
  metaDescription String?
  keywords        String?
  contactEmail    String?
  contactPhone    String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

